public with sharing class UploadOpportunityFileController {
    
    @AuraEnabled
    public static string uploadFile(String fileName, String fileRecordName, String fileContentBase64, String attachmentType, Id opportunityId) {
        ContentVersion cv = new ContentVersion();
        try {
            cv.Title = fileRecordName.abbreviate(255);
            cv.VersionData = EncodingUtil.base64Decode(fileContentBase64);
            cv.PathOnClient = fileName;
            cv.Attachment_Type__c = attachmentType;
            cv.FirstPublishLocationId = opportunityId;
            cv.ContentLocation = 'S';
            cv.IsMajorVersion = true;
            insert cv;
        } catch (Exception e) {
            throw new AuraHandledException(e.getMessage());
        }

        return cv.Id;
    }

    @AuraEnabled
    public static List<ContentVersion> getUploadedFiles(Id opportunityId) {
        List<ContentVersion> cvs = new List<ContentVersion>();
        try {
            List<ContentDocumentLink> cdls = [SELECT Id, ContentDocumentId FROM ContentDocumentLink WHERE LinkedEntityID = :opportunityId];
            if (!cdls.isEmpty()) {
                Set<Id> cdIds = new Set<Id>();
                for (ContentDocumentLink cdl : cdls) {
                    cdIds.add(cdl.ContentDocumentId);
                }
                cvs = [SELECT Id, ContentDocumentId, Title, CreatedDate, Attachment_Type__c, Expiration_Date__c, Project_Name__c, ProjectId__c FROM ContentVersion WHERE ContentDocumentId IN :cdIds AND IsLatest = true];
            }
        } catch (Exception e) {
            throw new AuraHandledException(e.getMessage());
        }

        return cvs;
    }

    @AuraEnabled
    public static String deleteFiles(List<ContentVersion> cvs) {
        List<ContentDocument> cdsToDelete = new List<ContentDocument>();
        for (ContentVersion cv : cvs) {
            cdsToDelete.add(new ContentDocument(Id = cv.ContentDocumentId));
        }

        try {
            delete cdsToDelete;
            return 'success';
        } catch (Exception e) {
            throw new AuraHandledException(e.getMessage());
        }
    }

    @AuraEnabled(cacheable=true)
    public static String getOpportunityRecordType(Id opportunityId) {
        try {
            
            // Query Opportunity Record Type Id
            Opportunity opp = [SELECT Id, RecordType.Name FROM Opportunity WHERE Id = :opportunityId LIMIT 1];
        
            // Return the Opportunity Record Type
            return opp.RecordType.Name;

        } catch (Exception e) {
            throw new AuraHandledException('Error retrieving Opportunity RecordTypeId: ' + e.getMessage());
        }
    }
    
